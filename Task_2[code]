  <title>Stopwatch Web App</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to right, #97f0e4, #97f0e4);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      color: #fff;
      margin: 0;
    }

    h1 {
      margin-bottom: 20px;
    }

    .stopwatch {
      background: #fff;
      color: #333;
      padding: 40px;
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    #display {
      font-size: 48px;
      margin-bottom: 30px;
    }

    .buttons button {
      padding: 10px 20px;
      margin: 5px;
      border: none;
      background: #97f0e4;
      color: white;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .buttons button:hover {
      background: #97f0e4;
    }

    .lap-times {
      margin-top: 20px;
      text-align: left;
      max-height: 150px;
      overflow-y: auto;
    }

    .lap-times ul {
      padding-left: 20px;
    }

    .lap-times li {
      font-size: 14px;
      margin-bottom: 5px;
    }
  </style>
